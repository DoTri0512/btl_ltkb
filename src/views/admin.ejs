        <div class="main_navbar">
            <ul class="list_item-navbar">
                <li class="item_navbar">
                    <a href="/admin">Trang chủ</a>
                </li>
                <li class="item_navbar">
                    <a href="/admin_user">Thông tin tài khoản</a>
                </li>
