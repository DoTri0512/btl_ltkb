            <div class="container">
                <h3 class="title_list">TRANG ADMIN</h3>
                <div class="list_product">
                    <div class="list_manager">
                        <div class="manager_item">
                            <a href="/admin_user" class="manager_ad">
                                <span>Số lượng tài khoản:</span>
                                <span><%= items_u.length %></span>
                            </a>
                        </div>
                        <div class="manager_item">
                            <a href="/admin_p" class="manager_ad">
                                <span>Số lượng sản phẩm hiện có</span>
                                <span><%= items_p.length %></span>
