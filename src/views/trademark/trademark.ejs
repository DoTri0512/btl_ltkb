<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đồng hồ Tri Nguyen </title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css" integrity="sha384-b6lVK+yci+bfDmaY1u0zE8YYJt0TZxLEAFyYSLHId4xoVvsrQu3INevFKo+Xir8e" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <!-- <link rel="stylesheet" href="/css/main.css"> -->
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div id="mySidenav" class="sidenav">
	    <p class="logo"><span>TN STORE</span></p>
        <a href="/" class="icon-a"><i class="fa fa-dashboard icons"></i> &nbsp;&nbsp;Dashboard</a>
        <a href="/admin_user"class="icon-a"><i class="fa fa-user icons"></i> &nbsp;&nbsp;Accounts</a>
        <a href="/admin_c"class="icon-a"><i class="fa fa-users icons"></i> &nbsp;&nbsp;Customers</a>
        <a href="/admin_e"class="icon-a"><i class="fa fa-list icons"></i> &nbsp;&nbsp;Employee</a>
        <a href="/admin_o"class="icon-a"><i class="fa fa-shopping-bag icons"></i> &nbsp;&nbsp;Orders</a>
        <a href="/admin_p"class="icon-a"><i class="fa fa-tasks icons"></i> &nbsp;&nbsp;Products</a>
        <a href="/trademark"class="icon-a"><i class="fa fa-list-alt icons"></i> &nbsp;&nbsp;Trademark</a>
    </div>
    <div id="main">
        <div class="head">
            <div class="col-div-6">
                <span style="font-size:28px;cursor:pointer; color: rgba(0,0,0,0.6);" class="nav" >QUẢN LÝ TÀI KHOẢN ADMIN</span>
                <!-- <span style="font-size:30px;cursor:pointer; color: white;" class="nav2"  >&#9776; Dashboard</span> -->
            </div>
        
            <div class="col-div-6">
                <div class="profile">
                    <div class="item-top item-user" style="display: flex; position:relative">
                        <div style="width: 36px; height:36px; border-radius: 50%; background-color: #f5f5f5">

                            <i class="fa-solid fa-user icon_u" style="font-size: 22px;"></i>
                        </div>
                        <a href="#" style="color:rgba(0, 0, 0, 0.6); font-size: 24px; margin-left: 10px" class="user-info">admin1</a>
                        <div class="my-user">
                            <ul class="my-user-info">
                                <!-- <li><a href="info_user.html">abc</a></li> -->
                                <li id="logout"><a href="">Đăng xuất</a></li>
                            </ul>
                        </div>
                    </div>
                </ul>
                </div>
            </div>
            <!-- <div class="clearfix"></div> -->
        </div>
        <div class="content">
            <div class="container">
                <h3 class="title_list">DANH SÁCH SẢN PHẨM</h3>
                <div class="list_product">
                    <div class="header_list_product">
                        
                        <h4><a href="/trademark/add_tr" class="btn btn-primary" style="font-size: 1.4rem;">Thêm sản phẩm</a></h4>
                        <form class="d-flex" role="search">
                            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" id="search_input">
                            <button class="btn btn-outline-success" type="submit" id="search_btn">Search</button>
                        </form>
                    </div>
                    <table class="table table-secondary">
                        <thead>
                            <tr>
                              <th scope="col">ID</th>
                              <th scope="col">Thuong hieu</th>
                              <th style="text-align: center;">Action</th>
                            </tr>
                          </thead>
                          <tbody>
                                <% if(list.length == 0) {%>
                                    <tr>

                                        <td style="text-align: center;" colspan="6">Chưa có thuong hieu nào được lưu</td>
                                    </tr>
                                <% } %>
                                <% for (let p of list){ %>
                                    <tr>
                                        <td><%= p.id  %></td>
                                        <td><%= p.name %></td>
                                        <td style="text-align:center; font-size:1.4rem;">
                                            <a href="/edit_trade/<%= p.id %>" class="btn btn-primary" style="font-size:1.4rem;">Edit</a>
                                            <!-- <a href="/product/detail/<%= p.id %>" class="btn btn-info" style="font-size:1.4rem;">Detail</a> -->
                                            <a href="/delete_trade/<%= p.id %>" class="btn btn-danger" style="font-size:1.4rem;">Delete</a>
                                        </td>
                                    </tr>
                            <%} %>
                          
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
</body>
</html>